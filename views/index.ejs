        integrity="sha512-ghNmjZWxfPSjuhBC8mJ9J4MKcqZAnclI4E7y/qlZgVf8Q4hQZMdYbHsOYQ1HFK5PtnMqs5DRRn2N/et0Mo8jCQ=="
        crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/7254a5900b.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="title">
        <h1 class="inter-bold">Python Debugging Tutor</h1>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-6 coding">
                <div class="code">
                    <form action="/codeRun" method="post" id="codeEditor">
                        <div class="code-header">
                            <h6 class="roboto-mono-normal">Your Code</h6>
                            <button type="submit" class="btn">Run</button>
                        </div>
                        <hr>
                        <div class="code-input roboto-mono-normal">
                            <div class="code-input-parent">
                                <div class="line-numbers">
                                    <span>1</span>
                                    <span>2</span>
                                    <span>3</span>
                                    <span>4</span>
                                    <span>5</span>
                                    <span>6</span>
                                    <span>7</span>
                                    <span>8</span>
                                    <span>9</span>
                                    <span>10</span>
                                    <span>11</span>
                                    <span>12</span>
                                    <span>13</span>
                                    <span>14</span>
                                    <span>15</span>
                                    <span>16</span>
                                    <span>17</span>
                                    <span>18</span>
                                    <span>19</span>
                                    <span>20</span>
                                    <span>21</span>
                                    <span>22</span>
                                    <!-- Add more spans for additional line numbers -->
                                </div>
                                <textarea placeholder="#Enter your code here" class="actual-input"
                                    name="code" ><%=code%></textarea>
                            </div>
                        </div>
                        <div class="spacer"></div>
                    </form>
                </div>
                <div class="output">
                    <div class="code-header console-header">
                        <h6 class="roboto-mono-normal">Console</h6>
                    </div>
                    <hr>
                    <pre class="outputValue roboto-mono-normal"></pre>
                </div>
            </div>
            <div class="col-lg-6 chatting">
                <div class="chat">
                    <div class="code-header console-header chat-header">
                        <h6 class="roboto-mono-normal">Chat</h6>

                    </div>
                    <hr>
                    <!-- Messages display area -->
                    <div class="messages" id="messages">
                        <!-- Messages will be displayed here -->
                        <div class="message">
                            <div class="message-header">
                                <img class="message-icon" src="/images/tutor-icon.png" alt="icon">
                                <h6 class="inter-semibold">Debugging Tutor</h6>
                            </div>
                            <div class="message-content">
                                <p class="inter-regular">Welcome to the Python debugging tutor! Enter your Python code
                                    to the left, and I can help you debug your code. When you’re ready, hit ‘Run’.</p>
                            </div>
                        </div>
